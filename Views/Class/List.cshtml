@model List<SchoolManagementSystem.Models.Class>
@{
	ViewData["Title"] = "List";
}

<table>

	<tr>

		<th>Id</th>
		<th>Name</th>
		<th>Actions</th>
		
	</tr>


	@for (int i = 0; i < Model.Count; i++)
	{

		<tr>

			<td>@Model[i].ClassId</td>
			<td>@Model[i].ClassName</td>
		<td> <a href="@Url.Action("Delete", new{Id=@Model[i].ClassId})"> 
			Delete</a>  </td>
		
	<td>  <a href="@Url.Action("Index", new{@Model[i].ClassId,
		@Model[i].ClassName})"> Edit</a>   </td>

	</tr>
	}

</table>
